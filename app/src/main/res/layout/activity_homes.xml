<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homes"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/frame"

        >
       <ImageView
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:src="@drawable/ic_side_menu"
           android:layout_gravity="left"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="10dp">

       </ImageView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_notification"

            >

        </ImageView>




    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"

        android:background="@drawable/profil_draw"
        android:src="@drawable/pp"
        android:scaleType="centerInside"
        android:padding="2dp"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aldi Alfarizi"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="210dp"
        android:textSize="25dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:text="Blood Type : B "
        android:textColor="@color/grey"
        android:textSize="15dp"></TextView>

    <View
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="0.5px"
        android:background="#bababb"
     android:layout_marginTop="270dp"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="264dp"
        android:gravity="center"
        >
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
            android:padding="50px"
            android:textStyle="bold"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textSize="25dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:textStyle="bold"
            >

        </TextView> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="330"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:padding="50px"
        android:textStyle="bold"
        >


    </TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="315dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Give"
            android:textColor="@color/grey"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Receive"
            android:textColor="@color/grey"
            android:paddingLeft="30dp"
            android:paddingRight="50dp"
            >

        </TextView> <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanx"
        android:textColor="@color/grey"
        android:paddingRight="15dp"
        >

    </TextView>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5px"
        android:layout_marginTop="350dp"
        android:background="#bababb"
        android:scaleType="fitXY"
        android:visibility="visible" />

    ////////////////////////////

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginTop="180dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    >
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_search_donor"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Donor"
        android:textColor="@color/black"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search donor near you"
        android:layout_marginBottom="15dp"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_message"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messeage"
            android:textColor="@color/black"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 New messages" />


</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:layout_gravity="center_vertical"
        android:layout_marginTop="180dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="220dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_blood_needed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood Needed"
            android:textColor="@color/black"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 user need blood"
            android:layout_marginBottom="15dp"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_donor_history"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donor History"
                android:textColor="@color/black"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Gives, 2 received" />



    </LinearLayout>

</FrameLayout>
