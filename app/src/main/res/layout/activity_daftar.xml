<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@color/white"


    android:textSize="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ic_header"

        >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"


                >

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_header_back"
                    android:onClick="backhome"
                    android:paddingLeft="10dp"


                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:paddingLeft="30dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20dp"

                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Username"
                android:textColorHint="#808284"

                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"

                />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"

                />
            <RadioGroup
                android:id="@+id/radioGroupNb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                >

                <RadioButton
                    android:id="@+id/male"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingRight="200dp"
                    android:text="Male"
                    android:shadowColor="@color/colorPrimary"
                    />

                <RadioButton
                    android:id="@+id/female"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />



            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/ac1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_register_dropdown"
                    android:drawablePadding="100px"
                    android:hint="BloodType"
                    >

                </AutoCompleteTextView>

                <AutoCompleteTextView
                    android:layout_marginLeft="100px"
                    android:id="@+id/ac2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_register_dropdown"
                    android:drawablePadding="200px"
                    android:hint="Reshus">

                </AutoCompleteTextView>
            </LinearLayout>

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                />
            <EditText
                android:id="@+id/password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Retype Password"
                />

            <RadioGroup
                android:id="@+id/Untuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"


                >

                <RadioButton
                    android:id="@+id/personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:checked="true"
                    android:paddingRight="150dp"
                    android:text="Personal"
                    android:shadowColor="@color/colorPrimary"
                    />

                <RadioButton
                    android:id="@+id/organization"
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:text="Organization" />
            </RadioGroup>


            <EditText
                android:id="@+id/Job"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:hint="Job"
                android:drawableEnd="@drawable/ic_arrow_dropdown"
                />

            <EditText
                android:id="@+id/adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Home Address"

                />
            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Default Location"
                android:drawableEnd="@drawable/ic_blood_needed_location"
                />
            <CheckBox
                android:text="Agre Term And Conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimary"
                android:id="@+id/cb1"
                android:layout_marginTop="20dp"

                />

            <Button
                android:id="@+id/almost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/register_button"
                android:gravity="center"
                android:minHeight="50dp"
                android:onClick="almost"
                android:text="register"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"

                />


        </LinearLayout>


    </LinearLayout>